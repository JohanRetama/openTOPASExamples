##################################
############ SOURCE ##############
##################################

s:Ge/BeamPosition/Parent   = "World"
s:Ge/BeamPosition/Type     = "Group"
d:Ge/BeamPosition/TransX   = 0. m
d:Ge/BeamPosition/TransY   = 0. m
d:Ge/BeamPosition/TransZ   =  Ge/World/HLZ m
d:Ge/BeamPosition/RotX     = 180. deg
d:Ge/BeamPosition/RotY     = 0. deg
d:Ge/BeamPosition/RotZ     = 0. deg


s:So/Demo/Type 						 = "Beam"
s:So/Demo/Component 				 = "BeamPosition"
s:So/Demo/BeamParticle 				 = "gamma"
d:So/Demo/BeamEnergy 				 = 150 keV
u:So/Demo/BeamEnergySpread 			 = 0
s:So/Demo/BeamPositionCutoffShape    = "Rectangle"
d:So/Demo/BeamPositionCutoffX 		 = 5 cm
d:So/Demo/BeamPositionCutoffY 		 = 5 cm
s:So/Demo/BeamPositionDistribution   = "Flat"
i:So/Demo/NumberOfHistoriesInRun     = 10 * Ts/ShowHistoryCountAtInterval
i:Ts/ShowHistoryCountAtInterval   	 = 10000000


#######################################
########### Detector ##################
#######################################

s:Sc/PhaseSpace_Cylinder/Quantity					   = "PhaseSpace" 
s:Sc/PhaseSpace_Cylinder/Surface 					   = "Cylinder/ZMinusSurface" 
sv:Sc/PhaseSpace_Cylinder/OnlyIncludeParticlesNamed    = 1 "gamma"
s:Sc/PhaseSpace_Cylinder/OutputType 				   = "ASCII" 
s:Sc/PhaseSpace_Cylinder/OutputFile 			       = "PhaseSpace" 
s:Sc/PhaseSpace_Cylinder/IfOutputFileAlreadyExists     = "Overwrite" 


