d:Ge/Cylinder/RotZ       = 0. deg

##################################
########### PHANTOMS #############
##################################

s:Ge/Cylinder_1mm/Type       = "TsCylinder"
s:Ge/Cylinder_1mm/Parent     = "Cylinder"
