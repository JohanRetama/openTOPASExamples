d:Ge/Cylinder_1mm/RotX       = 0. deg
d:Ge/Cylinder_1mm/RotY       = 0. deg
d:Ge/Cylinder_1mm/RotZ       = 0. deg

s:Ge/Cylinder_8mm/Type       = "TsCylinder"
s:Ge/Cylinder_8mm/Parent     = "Cylinder"
s:Ge/Cylinder_8mm/Material   = "Lead"
d:Ge/Cylinder_8mm/RMin       = 0 cm
d:Ge/Cylinder_8mm/RMax       = 1.7 cm
